{
    "Users": {
        "collection": "users",
        "schema": {
            "_id": "ObjectId",
            "name": {
                "type": "String",
                "maxLength": 20
            },
            "email": {
                "type":"string",
                "unique": true,
                "maxLength": 50
            },
            "firstName": {
                "type": "String",
                "maxLength": 20
            },
            "login": {
                "type": "String",
                "unique": true,
                "maxLength": 20
            },
            "mdp": {
                "type":"String",
                "maxLength": 100
            },
            "lastLogin": {
                "type": "String"
            }
        }
    }
}