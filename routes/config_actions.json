    "GET/stockVehicule": {
        "controler": "selectListSchemas",
        "view": "stockVehicule",
        "tables_list": ["Vehicules"],
        "sql_list": ["SELECT id_vehicule, nom_vehicule, date_mise_circulation, Vehicules.id_marque, Vehicules.id_type_vehicule, marques.nom_marque, type_vehicule.nom_type_vehicule  FROM Vehicules, marques, type_vehicule WHERE Vehicules.id_marque = marques.id_marque AND Vehicules.id_type_vehicule = type_vehicule.id_type_vehicule"],
        "form_action": "/editVehicule",
        "title": "Gestion de stock de véhicule"
    },
    "GET/formEditVehicule": {
        "controler": "selectByIdAndListSchemas",
        "view": "editVehicule",
        "tables_list": [
            "marques", 
            "type_vehicule"
        ],
        "sql_list": [
            "SELECT * FROM marques", 
            "SELECT * FROM type_vehicule"
        ],
        "sql_query": "SELECT id_vehicule, nom_vehicule, date_mise_circulation, Vehicules.id_marque, Vehicules.id_type_vehicule  FROM Vehicules WHERE Vehicules.id_vehicule=?",
        "form_action": "/editVehicule",
        "title": "Modifiez un véhicule"
    },
    "POST/editVehicule": {
        "controler": "updateSQL",
        "view": "editVehicule",
        "sql_query": "UPDATE Vehicules SET nom_vehicule=?, date_mise_circulation=?, id_marque=?, id_type_vehicule=? WHERE Vehicules.id_vehicule=?",
        "params_query": [
            "nameV",
            "dateMEC",
            "marqueV",
            "typeV",
            "id"
        ],
        "redirect": "/formEditVehicule",
        "title": "Modifiez un véhicule"
    },
    "GET/formDeleteVehicule": {
