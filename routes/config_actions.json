        "controler": "selectListSchemas",
        "view": "addPiece",
        "tables_list": ["marques", "type_vehicule"],
        "sql_list": ["select * FROM marques", "select * from type_vehicule"],
        "form_action": "/addPiece",
        "title": "Ajoutez une pièce"
    },
    "POST/addPiece": {
        "controler": "addPiece",
        "view": "addPiece",
        "request": "insert into Vehicules (nom_vehicule, date_mise_circulation, id_vehicule, id_marque) VALUES (?, ?, ?, ?)"
    },
    "GET/stock": {
        "controler": "selectListSchemas",
