<div class="wrapper">
    <div>
        <form action="{{form_action}}" method="POST">
            <div class="form">
                <label for="marqueV">Marque du véhicule :</label>
                <select name="marqueV" id="marqueV">
                    {{#each datas.marques}}
                    {{#compare this.id_marque ../data.id_marque operator="=="}}
                    <option value="{{this.id_marque}}" selected>{{this.nom_marque}}</option>
                    {{else}}
                    <option value="{{this.id_marque}}">{{this.nom_marque}}</option>
                    {{/compare}}
                    {{/each}}
                </select>
                <label for="modeleV">Modèle du véhicule :</label>
                <input type="text" name="modeleV" id="modeleV" value="{{data.nom_modele}}">
                <input type="hidden" name="id" value="{{data.id_modele}}">
                <input type="submit" value="Modifier">
            </div>
        </form>
    </div>
    <div>
        <button class="back">
            <div>
                <svg class="btnBack" data-name="Layer 3" viewBox="0 0 64 80" x="0px" y="0px"><path d="M24.73,47.56a2,2,0,0,0,2.83-2.83L14.83,32,27.56,19.27a2,2,0,0,0-2.83-2.83L10.59,30.59a2,2,0,0,0,0,2.83Z"/><path d="M52.14,30H26a2,2,0,0,0,0,4H52.14a2,2,0,0,0,0-4Z"/></svg>
                <span>Retour</span>
            </div>
        </button>
    </div>
</div>