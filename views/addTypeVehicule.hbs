<div class="wrapper">
    <section>
        {{#if msg}}
        <h4>{{msg}}</h4>
        {{/if}}
        <span class="existing">Types de véhicule existant :</span>
        <select name="type">
            <option value=""></option>
            {{#each data.type_vehicule}}
            <option value="{{this.id_type_vehicule}}">{{this.nom_type_vehicule}}</option>
            {{/each}}
        </select>
        <form action="{{this.form_action}}" method="POST" enctype="multipart/form-data" id="form">
            <div class="form">
                <span class="err"></span>
                <label for="type_vehicule">Type de véhicule* :</label>
                <input class="needed" type="text" name="type_vehicule">
                <label for="doc_pdf">Doc du type de véhicule :</label>
                <input type="file" name="doc_pdf">
                <input type="submit" value="Ajoutez">
                <p class="champs">*champs requis</p>
            </div>
        </form>
    </section>
</div>