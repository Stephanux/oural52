<div class="wrapper">
    <section>
        {{#if msg}}
        <h4>{{msg}}</h4>
        {{/if}}
        <form action="{{form_action}}" method="POST">
            <div class="form">
                <label for="nameV">Nom du véhicule :</label>
                <input type="text" name="nameV" value="{{data.nom_vehicule}}">
                <label for="dateMEC">Date de mise en circulation :</label>
                <input type="date" name="dateMEC" value="{{data.date_mise_circulation}}">
                <label for="typeV">Type de véhicule :</label>
                <select name="typeV">
                    <option value=""></option>
                    {{#each datas.type_vehicule}}
                    {{#compare this.id_type_vehicule ../data.id_type_vehicule operator="=="}}
                    <option value="{{this.id_type_vehicule}}" selected>{{this.nom_type_vehicule}}</option>
                    {{else}}
                    <option value="{{this.id_type_vehicule}}">{{this.nom_type_vehicule}}</option>
                    {{/compare}}
                    {{/each}}
                </select>
                <label for="marque">Marque du véhicule :</label>
                <select name="marqueV">
                    <option value=""></option>
                    {{#each datas.marques}}
                    {{#compare this.id_marque ../data.id_marque operator="=="}}
                    <option value="{{this.id_marque}}" selected>{{this.nom_marque}}</option>
                    {{else}}
                    <option value="{{this.id_marque}}">{{this.nom_marque}}</option>
                    {{/compare}}
                    {{/each}}
                </select>
                <input type="hidden" name="id" value="{{data.id_vehicule}}">
                <input type="submit" value="Modifiez">
            </div>
        </form>
    </section>
</div>