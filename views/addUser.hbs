<div class="wrapper">
    <section>
        <div>
            {{#if msg}}
            <h4>{{msg}}</h4>
            {{/if}}
        </div>
        <span class="existing">Utilisateurs existant :</span>
        <select>
            <option value=""></option>
            {{#each data}}
            <option value="{{this._id}}">{{this.firstName}}</option>
            {{/each}}
        </select>
        <form action="{{this.form_action}}" method="POST" id="formAddUser">
            <div class="form">
                <label for="name">Nom :</label>
                <input type="text" name="name" value="{{data.name}}">
                <label for="firstName">Pr√©nom :</label>
                <input type="text" name="firstName" value="{{data.firstName}}">
                <label for="login">Pseudo :</label>
                <input type="text" name="login" value="{{data.login}}">
                <label for="mdp">Mot de passe :</label>
                <input type="password" name="mdp" value="{{data.mdp}}">
                <input type="submit" value="Ajoutez">
            </div>
        </form>
    </section>
</div>