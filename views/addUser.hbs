{{#if msg}}
    <div id="modal">
        <div class="modal-content">
            <svg class="close-modal" xmlns="http://www.w3.org/2000/svg" data-name="Layer 2" viewBox="0 0 32 40"x="0px" y="0px">
                <path d="M4,29a1,1,0,0,1-.707-1.707l24-24a1,1,0,1,1,1.414,1.414l-24,24A1,1,0,0,1,4,29Z" />
                <path d="M28,29a1,1,0,0,1-.707-.293l-24-24A1,1,0,0,1,4.707,3.293l24,24A1,1,0,0,1,28,29Z" />
            </svg>
            <h4>{{msg}}</h4>
        </div>
    </div>     
{{/if}}
<div class="user-wrap">
    <div>
        <form action="{{this.form_action}}" method="POST" id="form-user">
            <div class="form">
                <label for="name">Nom* :</label>
                <div class="form-data">
                    <input type="text" name="name" id="userName" value="{{data.name}}">
                    <i class="fas fa-exclamation-circle failure-icon"></i>
                    <i class="far fa-check-circle success-icon"></i>
                    <div class="error"></div>
                </div>
                <label for="firstName">Pr√©nom* :</label>
                <div class="form-data">
                    <input type="text" name="firstName" id="userFirstname" value="{{data.firstName}}">
                    <i class="fas fa-exclamation-circle failure-icon"></i>
                    <i class="far fa-check-circle success-icon"></i>
                    <div class="error"></div>
                </div>
                <label for="email">Email* :</label>
                <div class="form-data">
                    <input type="email" name="email" id="email" value="{{data.email}}">
                    <i class="fas fa-exclamation-circle failure-icon"></i>
                    <i class="far fa-check-circle success-icon"></i>
                    <div class="error"></div>
                </div>
                <label for="login">Pseudo* :</label>
                <div class="form-data">
                    <input type="text" name="login" id="userLogin" value="{{data.login}}">
                    <i class="fas fa-exclamation-circle failure-icon"></i>
                    <i class="far fa-check-circle success-icon"></i>
                    <div class="error"></div>
                </div>           
                <input type="hidden" name="mdp" id="userMdp" value="{{data.mdp}}">  
                <input type="hidden" name="lastLogin" id="lastLogin" value="{{data.lastLogin}}">             
                <input type="submit" value="Ajouter">
                <span class="champs">*champs requis</span>
            </div>
        </form>
    </div>
    <div>
        <button class="back">
            <div>
                <svg class="btnBack" data-name="Layer 3" viewBox="0 0 64 80" x="0px" y="0px"><path d="M24.73,47.56a2,2,0,0,0,2.83-2.83L14.83,32,27.56,19.27a2,2,0,0,0-2.83-2.83L10.59,30.59a2,2,0,0,0,0,2.83Z"/><path d="M52.14,30H26a2,2,0,0,0,0,4H52.14a2,2,0,0,0,0-4Z"/></svg>
                <span>Retour</span>
            </div>
        </button>
    </div>
</div>
<script src="js/class/FormControl.js" type="module"></script>
<script src="js/form/formAddUser.js" type="module"></script>
<script src="js/modal/modalUser.js" type="module"></script>