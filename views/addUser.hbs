<div class="wrapper">
    <section>
        <div>
            {{#if msg}}
            <h4>{{msg}}</h4>
            {{/if}}
        </div>
        <span class="existing">Utilisateurs existant :</span>
        <select>
            <option value=""></option>
            {{#each data}}
            <option value="{{this._id}}">{{this.firstName}}</option>
            {{/each}}
        </select>
        <form action="{{this.form_action}}" method="POST" id="form">
            <div class="form">
            <span class="err"></span>
                <label for="name">Nom* :</label>
                <input class="needed" type="text" name="name" value="{{data.name}}">
                <label for="firstName">Pr√©nom* :</label>
                <input class="needed" type="text" name="firstName" value="{{data.firstName}}">
                <label for="login">Pseudo* :</label>
                <input class="needed" type="text" name="login" value="{{data.login}}">
                <label for="mdp">Mot de passe* :</label>
                <input class="needed pass" type="password" name="mdp" value="{{data.mdp}}">
                <label for="password-confirm">Confirmation du mot de passe* :</label>
                <input class="needed confirm" type="password" name="password-confirm">
                <input type="submit" value="Ajoutez">
                <p class="champs">*champs requis</p>
            </div>
        </form>
    </section>
</div>