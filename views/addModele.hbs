<div class="wrapper">
    <section>
        {{#if msg}}
        <h4>{{msg}}</h4>
        {{/if}}
        <span>Modèle de véhicule existant</span>
        <select>
            <option value=""></option>
            {{#each data.modele}}
            <option value="{{this.id_modele}}">{{this.nom_modele}}</option>
            {{/each}}
        </select>
        <form action="{{this.form_action}}" method="POST">
            <div class="form">
                <label for="marque">Marque du véhicule :</label>
                <select name="marque">
                    <option value=""></option>
                    {{#each data.marques}}
                    <option value="{{this.id_marque}}">{{this.nom_marque}}</option>
                    {{/each}}
                </select>
                <label for="modele">Modèle d'une marque</label>
                <input type="text" name="modele">
                <input type="submit" value="Ajoutez">
            </div>
        </form>
    </section>
</div>