<div class="wrapper">
    <div>
        {{#if msg}}
        <h4>{{msg}}</h4>
        {{/if}}
        <span class="existing">Modèle de marque existant :</span>
        <select>
            {{#each data.modele}}
            <option value="{{this.id_modele}}">{{this.nom_modele}}</option>
            {{/each}}
        </select>
        <form action="{{this.form_action}}" method="POST" id="form-modele">
            <div class="form">
                <label for="marque">Marque du véhicule* :</label>
                <div class="form-data">
                    <select name="marque" id="marque">
                        {{#each data.marques}}
                        <option value="{{this.id_marque}}">{{this.nom_marque}}</option>
                        {{/each}}
                    </select>
                    <i class="fas fa-exclamation-circle failure-icon"></i>
                    <i class="far fa-check-circle success-icon"></i>
                    <div class="error"></div>
                </div>
                <label for="modele">Modèle de la marque* :</label>
                <div class="form-data">
                    <input type="text" name="modele" id="addModele">
                    <i class="fas fa-exclamation-circle failure-icon"></i>
                    <i class="far fa-check-circle success-icon"></i>
                    <div class="error"></div>
                </div>
                <input type="submit" value="Ajouter">
                <span class="champs">*champs requis</span>
            </div>
        </form>
    </div>
    <div>
        <button class="back">
            <div>
                <svg class="btnBack" data-name="Layer 3" viewBox="0 0 64 80" x="0px" y="0px"><path d="M24.73,47.56a2,2,0,0,0,2.83-2.83L14.83,32,27.56,19.27a2,2,0,0,0-2.83-2.83L10.59,30.59a2,2,0,0,0,0,2.83Z"/><path d="M52.14,30H26a2,2,0,0,0,0,4H52.14a2,2,0,0,0,0-4Z"/></svg>
                <span>Retour</span>
            </div>
        </button>
    </div>
</div>
<script src="js/class/FormControl.js" type="module"></script>
<script src="js/form/formAddModele.js" type="module"></script>