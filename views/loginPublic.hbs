{{#if msg}}
    <div id="modal">
        <div class="modal-content">
            <svg class="close-modal" xmlns="http://www.w3.org/2000/svg" data-name="Layer 2" viewBox="0 0 32 40"x="0px" y="0px">
                <path d="M4,29a1,1,0,0,1-.707-1.707l24-24a1,1,0,1,1,1.414,1.414l-24,24A1,1,0,0,1,4,29Z" />
                <path d="M28,29a1,1,0,0,1-.707-.293l-24-24A1,1,0,0,1,4.707,3.293l24,24A1,1,0,0,1,28,29Z" />
            </svg>
            <h4>{{msg}}</h4>
        </div>
    </div>     
{{/if}}
<div class="container">
    <main>       
        <form action="/authenticated" method="POST" id="form-login">
            <div class="form">
                <label for="username">Pseudo :</label>
                <div class="form-data">
                    <input type="text" name="username" id="usernameLogin">
                    <i class="fas fa-exclamation-circle failure-icon"></i>
                    <i class="far fa-check-circle success-icon"></i>
                    <div class="error"></div>
                </div>
                <label for="password">Mot de passe :</label>
                <div class="form-data">
                    <input type="password" name="password" id="passwordLogin">
                    <i class="fas fa-exclamation-circle failure-icon"></i>
                    <span class="icon-password">
                        <i class="fas fa-eye password-eye"></i>
                    </span>
                    <i class="far fa-check-circle success-icon"></i>
                    <div class="error"></div>
                </div>
                <input type="password" name="pwd" id="pwd">
                <a href="/forgotPassword" class="forget">Mot de passe oubli√©</a>
                <input type="submit" value="Se connecter">
            </div>
        </form>
    </main>
</div>
<script src="js/class/FormControl.js" type="module"></script>
<script src="js/form/formLogin.js" type="module"></script>
<script src="js/modal/modalContainer.js" type="module"></script>