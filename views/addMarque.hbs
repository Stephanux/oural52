<div class="wrapper">
    <section>
        {{#if msg}}
        <h4>{{msg}}</h4>
        {{/if}}
        <span>Marques de véhicule existant</span>
        <select name="type">
            <option value=""></option>
            {{#each data.marques}}
            <option value="{{this.id_marque}}">{{this.nom_marque}}</option>
            {{/each}}
        </select>
        <span>Modèle de véhicule existant</span>
        <select name="modele">
            <option value=""></option>
            {{#each data.marques}}
            <option value="{{this.id_marque}}">{{this.modele}}</option>
            {{/each}}
        </select>
        <form action="{{this.form_action}}" method="POST">
            <div class="form">
                <label for="marque">Marque du véhicule :</label>
                <input type="text" name="marque">
                <label for="modele">Modèle du véhicule :</label>
                <input type="text" name="modele">
                <input type="submit" value="Ajoutez">
            </div>
        </form>
    </section>
</div>