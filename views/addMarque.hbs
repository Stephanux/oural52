<div class="wrapper">
    <div>
        {{#if msg}}
        <h4>{{msg}}</h4>
        {{/if}}
        <span class="existing">Marques de véhicules existant :</span>
        <select>
            {{#each data.marques}}
            <option value="{{this.id_marque}}">{{this.nom_marque}}</option>
            {{/each}}
        </select>
        <form action="{{this.form_action}}" method="POST" id="form">
            <div class="form">
                <span class="err"></span>
                <label for="marque">Marque du véhicule* :</label>
                <input type="text" name="marque" id="marque">
                <input type="submit" value="Ajouter">
                <span class="champs">*champs requis</span>
            </div>
        </form>
    </div>
</div>
<script src="js/form.js"></script>