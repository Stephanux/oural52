<div class="wrapper">
    <div>
        {{#if msg}}
        <h4>{{msg}}</h4>
        {{/if}}
        <form action="{{this.form_action}}" method="POST" id="formAddUser">
            <div class="form">
                <label for="name">Nom :</label>
                <input type="text" name="name" id="name" value="{{data.name}}">
                <label for="firstName">Pr√©nom :</label>
                <input type="text" name="firstName" id="firstName" value="{{data.firstName}}">
                <label for="email">Email* :</label>
                <input type="email" name="email" id="email" value="{{data.email}}">          
                <label for="login">Pseudo :</label>
                <input type="text" name="login" id="login" value="{{data.login}}">
                <label for="mdp">Mot de passe :</label>
                <input type="password" name="mdp" id="mdp">
                <input type="hidden" value={{data._id}} name="_id">
                <input type="submit" value="Modifier">
            </div>
        </form>
    </div>
    <div>
        <button class="back">
            <div>
                <svg class="btnBack" data-name="Layer 3" viewBox="0 0 64 80" x="0px" y="0px"><path d="M24.73,47.56a2,2,0,0,0,2.83-2.83L14.83,32,27.56,19.27a2,2,0,0,0-2.83-2.83L10.59,30.59a2,2,0,0,0,0,2.83Z"/><path d="M52.14,30H26a2,2,0,0,0,0,4H52.14a2,2,0,0,0,0-4Z"/></svg>
                <span>Retour</span>
            </div>
        </button>
    </div>
</div>