<div class="messages">
    <div class="top-message">
        {{#if msg}}
        <h4>{{msg}}</h4>
        {{/if}}
        <span class="existing">Véhicules existant :</span>
        <select name="type">
            {{#each data.Vehicules}}
            <option value="{{this.id_vehicule}}">{{this.nom_vehicule}}</option>
            {{/each}}
        </select>
    </div>
</div>
<div class="wrapper">
    <div>
        <form action="{{this.form_action}}" method="POST" id="form-add-sous-type">
            <div class="form">
                <label for="stype_piece">Sous-type de pièce* :</label>
                <div class="form-data">
                    <input type="text" name="stype_piece" id="stype_piece">
                    <i class="fas fa-exclamation-circle failure-icon"></i>
                    <i class="far fa-check-circle success-icon"></i>
                    <div class="error"></div>
                </div>
                <label for="type_piece">Type de pièce* :</label>
                <div class="form-data">
                    <select name="type_piece">
                        {{#each data.type_p_d}}
                        <option value="{{this.id_type_p_d}}">{{this.nom_type_p_d}}</option>
                        {{/each}}
                    </select>
                    <i class="fas fa-exclamation-circle failure-icon"></i>
                    <i class="far fa-check-circle success-icon"></i>
                    <div class="error"></div>
                </div>
                <input type="submit" value="Ajouter">
                <span class="champs">*champs requis</span>
            </div>
        </form>
    </div>
    <div>
        <button class="back">
            <div>
                <svg class="btnBack" data-name="Layer 3" viewBox="0 0 64 80" x="0px" y="0px"><path d="M24.73,47.56a2,2,0,0,0,2.83-2.83L14.83,32,27.56,19.27a2,2,0,0,0-2.83-2.83L10.59,30.59a2,2,0,0,0,0,2.83Z"/><path d="M52.14,30H26a2,2,0,0,0,0,4H52.14a2,2,0,0,0,0-4Z"/></svg>
                <span>Retour</span>
            </div>
        </button>
    </div>
</div>
<script src="js/class/FormControl.js" type="module"></script>
<script src="js/form/formAddSousTypePiece.js" type="module"></script>