<div class="wrapper">
    <div>
        {{#if msg}}
        <h4>{{msg}}</h4>
        {{/if}}
        <span class="existing">Types de pièces existant :</span>
        <select name="type">
            {{#each data.type_p_d}}
            <option value="{{this.id_type_p_d}}">{{this.nom_type_p_d}}</option>
            {{/each}}
        </select>
        <form action="{{this.form_action}}" method="POST" id="form-type-piece">
            <div class="form">
                <label for="type_piece">Type de pièce* :</label>
                <div class="form-data">
                    <input type="text" name="type_piece" id="type_piece">
                    <i class="fas fa-exclamation-circle failure-icon"></i>
                    <i class="far fa-check-circle success-icon"></i>
                    <div class="error"></div>
                </div>
                <input type="submit" value="Ajouter">
                <span class="champs">*champs requis</span>
            </div>
        </form>
    </div>
</div>
<script src="js/class/FormControl.js" type="module"></script>
<script src="js/form/formAddTypePiece.js" type="module"></script>