<div class="wrapper">
    <div>
        {{#if msg}}
        <h4>{{msg}}</h4>
        {{/if}}
        <span class="existing">Types de pièces existant :</span>
        <select name="type">
            {{#each data.type_p_d}}
            <option value="{{this.id_type_p_d}}">{{this.nom_type_p_d}}</option>
            {{/each}}
        </select>
        <form action="{{this.form_action}}" method="POST" id="form">
            <div class="form">
                <span class="err"></span>
                <label for="type_piece">Type de pièce* :</label>
                <input type="text" name="type_piece" id="type_piece">
                <input type="submit" value="Ajoutez">
                <span class="champs">*champs requis</span>
            </div>
        </form>
    </div>
</div>
<script src="js/form.js"></script>